@import "./_variables.styl";
@import "./_global.styl";
/* Master Styles */

html
  position: relative
  min-height: 100%

html, body
  margin: 0
  padding: 0

/* Main banner on droidcon.pl website */
smMainBannerHeight = 100vh
#main-banner
  background-image: url("~../assets/images/bg-02.jpg")
  background-color: #000000
  height: smMainBannerHeight
  -moz-background-size: cover
  -webkit-background-size: cover
  background-size: cover
  background-position: top center
  background-repeat: no-repeat
  position: relative
  @media md
    background-position: top right
  @media lg
    background-position: 0% 30%


  img#main-graphic
    width: 90%
    max-width: 550px
    height: auto
    position: absolute
    top: 15%
    left: 0
    right: 0
    margin: auto
    @media md
      max-width: 600px
      top: 30%
    @media lg
      max-width: 700px
      top: 25%

  #conference-timer
    display: none
    color: colWhite
    position: absolute
    left: 0
    right: 0
    width: 100%
    bottom: 250px
    text-align: center
    font-size: 52px
    font-family: 'Roboto Condensed', sans-serif
    font-weight: 300
    @media md
      font-size: 62px
      bottom: 20%
    @media lg
      font-size: 70px
    .countdown-fld
      display: inline-block
      margin-right: 20px
      span
        font-size: 16px
        text-align: center

  #main-buttons
    color: colWhite
    position: absolute
    left: 0
    right: 0
    bottom: 50px
    text-align: center
    font-size: 40px
    @media md
      bottom: 100px

  // setup for small horizontal screens
  @media only screen and (max-height: 768px) and (orientation: landscape)
    img#main-graphic
      width: 50%
      top: 27%
      right: initial
      left: 30px
      padding: 20px 0
    #conference-timer
      width: 45%
      left: initial
      top: 36%
      font-size: 38px
      bottom: 20%
      .countdown-fld
        margin-right: 15px
    #main-buttons
      bottom: 50px

section#about
  .when-where
    margin: 20px auto 0
    max-width: 315px
    display: table
    img
      width: 40px
      margin-right: 20px
      display: table-cell
      vertical-align: middle
    p
      display: table-cell
      vertical-align: middle
      min-width: 300px
      max-width: 320px
      @media sm
        min-width: 340px
        max-width: 360px
      @media md
        max-width: 510px
    &.empty
      width: 315px
      p
        width: 100%
    @media xs
      max-width: 340px
    @media md
      margin-top: 20px
      max-width: 350px
      float: right
      &.empty
        float: left

// section#recaption

.youtube-iframe
  border: none
  display: block
  margin: 30px auto 30px
  @media md
    width: 560px !important
    height: 349px !important
  @media lg
    width: 100% !important
    max-width: 560px !important
    min-height: 300px !important

section#participate
  img
    width: 80px
    height: auto
    display: block
    margin: 50px auto 30px auto
  .section-subtitle
    @media lg
      min-height: 70px
      line-height: 35px
  .section-paragraph
    @media lg
      min-width: 300px

section#contact
  p.section-paragraph
    font-family: 'nerissemibold', Helvetica, Arial, sans-serif
    font-size: 24px
    a.green-button
      padding: 0 30px
